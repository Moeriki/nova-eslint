{
    "name": "nova-eslint",
    "version": "0.3.0",
    "description": "Lint your JavaScript and TypeScript files with ESLint.",
    "scripts": {
        "build": "rollup -c rollup.config.js",
        "lint:eslint": "eslint \"Source/**/*.js\"",
        "lint:prettier": "prettier --ignore-path .gitignore --check \"**/*.{ts,js,json}\"",
        "lint": "concurrently 'yarn:lint:*'",
        "watch": "onchange -i \"Source/**/*.js\" \"rollup.*.js\" -- yarn run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jsmecham/nova-eslint.git"
    },
    "author": "Justin Mecham",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jsmecham/nova-eslint/issues"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "concurrently": "^5.2.0",
        "eslint": "^6.8.0",
        "eslint-plugin-nova": "^1.0.0-beta.3",
        "onchange": "^7.0.0",
        "rollup": "^2.7.2"
    },
    "private": true,
    "dependencies": {}
}
