{
  "name": "nova-eslint",
  "version": "0.0.1",
  "description": "Nova eslint integration.",
  "scripts": {
    "build:main": "rollup -c rollup.config.main.js",
    "build": "concurrently 'yarn:build:*'",
    "lint:eslint": "eslint \"Source/**/*.js\"",
    "lint:prettier": "prettier --ignore-path .gitignore --check \"**/*.{ts,js,json}\"",
    "lint": "concurrently 'yarn:lint:*'",
    "watch": "onchange -i \"Source/**/*.js\" \"rollup.*.js\" -- yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apexskier/nova-eslint.git"
  },
  "author": "Cameron Little",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apexskier/nova-eslint/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-nova": "^1.0.0-beta.3",
    "onchange": "^7.0.0",
    "rollup": "^2.7.2"
  },
  "private": true,
  "dependencies": {}
}
