{
    "identifier": "Mecham.ESLint",
    "name": "ESLint",
    "vendor": "Mecham",
    "description": "Integrates with ESLint to provide contextual issues in Nova.",
    "version": "0.1.0",
    "categories": ["issues"],
    "main": "main.js",
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:jsx",
        "onLanguage:tsx",
        "onWorkspaceContains:.eslintrc.*"
    ],
    "entitlements": {
        "process": true
    }
}
